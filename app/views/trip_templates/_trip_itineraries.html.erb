<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Itineraries

    <a data-toggle="collapse" href="#trip_itineraries_new_form">
      Add itinerary
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @trip.itineraries.each do |itinerary| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <a href="/itineraries/<%= itinerary.id %>">
          <%= itinerary.traveler_id %>
        </a>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%if current_traveler == itinerary.traveler %>
          <a href="/delete_itinerary_from_trip/<%= itinerary.id %>">
            Delete
          </a>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="trip_itineraries_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "trip_templates/trip_itineraries_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>

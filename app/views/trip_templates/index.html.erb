<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All trips
    </h1>

    <a href="/trips/new" class="btn btn-block btn-outline-secondary">
      Add a new trip
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Destination
        </th>

        <th>
          Trip name
        </th>

        <th>
          Traveler
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @trips.each do |trip| %>
      <tr>
        <!-- Display trip.id start -->
        <td>
          <%= trip.id %>
        </td>
        <!-- Display trip.id end -->

        <!-- Display trip.destination start -->
        <td>
          <%= trip.destination %>
        </td>
        <!-- Display trip.destination end -->

        <!-- Display trip.trip_name start -->
        <td>
          <%= trip.trip_name %>
        </td>
        <!-- Display trip.trip_name end -->

        <!-- Display trip.traveler_id start -->
        <td>
          <%= trip.traveler_id %>
        </td>
        <!-- Display trip.traveler_id end -->

        <!-- Display trip.created_at start -->
        <td>
          <%= time_ago_in_words(trip.created_at) %> ago
        </td>
        <!-- Display trip.created_at end -->

        <!-- Display trip.updated_at start -->
        <td>
          <%= time_ago_in_words(trip.updated_at) %> ago
        </td>
        <!-- Display trip.updated_at end -->

        <td>
          <a href="/trips/<%= trip.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @trips, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

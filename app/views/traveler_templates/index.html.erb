<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All travelers
    </h1>

    <a href="/travelers/new" class="btn btn-block btn-outline-secondary">
      Add a new traveler
    </a>
  </div>
</div>





<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Email
        </th>

        <th>
          Password
        </th>

        <th>
          Home airport
        </th>

        <th>
          Username
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @travelers.each do |traveler| %>
      <tr>
        <td>
          <%= traveler.id %>
        </td>

        <td>
          <%= traveler.email %>
        </td>

        <td>
          <%= traveler.password %>
        </td>

        <td>
          <%= traveler.home_airport %>
        </td>

        <td>
          <%= traveler.username %>
        </td>

        <td>
          <%= time_ago_in_words(traveler.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(traveler.updated_at) %> ago
        </td>

        <td>
          <a href="/travelers/<%= traveler.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @travelers, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

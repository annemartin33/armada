<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Expense #<%= @expense.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/expenses" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link expense start -->
      <div class="col">
        <a href="/expenses/<%= @expense.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit expense
        </a>
      </div>
      <!-- Edit link expense end -->

      <!-- Delete link expense start -->
      <div class="col">
        <a href="/delete_expense/<%= @expense.id %>" class="btn btn-block btn-outline-secondary">
          Delete expense
        </a>
      </div>
      <!-- Delete link expense end -->
    </div>

    <dl>
      <dt>
        Trip
      </dt>
      <!-- Display trip_id start -->
      <dd>
        <%= @expense.trip_id %>
      </dd>
      <!-- Display trip_id end -->

      <dt>
        Expense name
      </dt>
      <!-- Display expense_name start -->
      <dd>
        <%= @expense.expense_name %>
      </dd>
      <!-- Display expense_name end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@expense.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@expense.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

<!-- Show Page Customization starts -->
<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <%= render partial: "expense_templates/expense_participant" %>
  </div>
</div>
<!-- Show Page Customization end -->

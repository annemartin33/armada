<!-- Validation failure messages -->
<% if @expense.present? %>
  <% if @expense.errors.any? %>
    <% @expense.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new expense
</h1>


<hr>

<!-- Form expense start -->
<form action="/create_expense" method="post">
<!-- Form expense end -->

  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <label for="trip_id">
      Trip
    </label>

    <!-- Input for trip_id start -->
    <input type="text" id="trip_id" name="trip_id" class="form-control" value="<%= @expense.trip_id %>">
    <!-- Input for trip_id end -->
  </div>
  <!-- Label and input for trip_id end -->

  <!-- Label and input for expense_name start -->
  <div class="form-group">
    <label for="expense_name">
      Expense name
    </label>

    <!-- Input for expense_name start -->
    <input type="text" id="expense_name" name="expense_name" class="form-control" value="<%= @expense.expense_name %>">
    <!-- Input for expense_name end -->
  </div>
  <!-- Label and input for expense_name end -->

  <button class="btn btn-block btn-outline-secondary">
    Create expense
  </button>
</form>

<hr>

<a href="/expenses">
  Go back
</a>

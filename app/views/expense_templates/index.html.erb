<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All expenses
    </h1>

    <a href="/expenses/new" class="btn btn-block btn-outline-secondary">
      Add a new expense
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Trip
        </th>

        <th>
          Expense name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @expenses.each do |expense| %>
      <tr>
        <!-- Display expense.id start -->
        <td>
          <%= expense.id %>
        </td>
        <!-- Display expense.id end -->

        <!-- Display expense.trip_id start -->
        <td>
          <%= expense.trip.destination %>
        </td>
        <!-- Display expense.trip_id end -->

        <!-- Display expense.expense_name start -->
        <td>
          <%= expense.expense_name %>
        </td>
        <!-- Display expense.expense_name end -->

        <!-- Display expense.created_at start -->
        <td>
          <%= time_ago_in_words(expense.created_at) %> ago
        </td>
        <!-- Display expense.created_at end -->

        <!-- Display expense.updated_at start -->
        <td>
          <%= time_ago_in_words(expense.updated_at) %> ago
        </td>
        <!-- Display expense.updated_at end -->

        <td>
          <a href="/expenses/<%= expense.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @expenses, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>

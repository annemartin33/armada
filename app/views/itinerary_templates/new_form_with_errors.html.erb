<!-- Validation failure messages -->
<% if @itinerary.present? %>
  <% if @itinerary.errors.any? %>
    <% @itinerary.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new itinerary
</h1>


<hr>

<!-- Form itinerary start -->
<form action="/create_itinerary" method="post">
<!-- Form itinerary end -->

  <!-- Label and input for traveler_id start -->
  <div class="form-group">
    <label for="traveler_id">
      Traveler
    </label>

    <!-- Input for traveler_id start -->
    <%= select_tag(:traveler_id, options_from_collection_for_select(Traveler.all, :id, :email, @itinerary.traveler_id), :class => "form-control") %>
    <!-- Input for traveler_id end -->
  </div>
  <!-- Label and input for traveler_id end -->

  <!-- Label and input for arrival_flight start -->
  <div class="form-group">
    <label for="arrival_flight">
      Arrival flight
    </label>

    <!-- Input for arrival_flight start -->
    <input type="text" id="arrival_flight" name="arrival_flight" class="form-control" value="<%= @itinerary.arrival_flight %>">
    <!-- Input for arrival_flight end -->
  </div>
  <!-- Label and input for arrival_flight end -->

  <!-- Label and input for departure_flight start -->
  <div class="form-group">
    <label for="departure_flight">
      Departure flight
    </label>

    <!-- Input for departure_flight start -->
    <input type="text" id="departure_flight" name="departure_flight" class="form-control" value="<%= @itinerary.departure_flight %>">
    <!-- Input for departure_flight end -->
  </div>
  <!-- Label and input for departure_flight end -->

  <!-- Label and input for home_airport start -->
  <div class="form-group">
    <label for="home_airport">
      Home airport
    </label>

    <!-- Input for home_airport start -->
    <input type="text" id="home_airport" name="home_airport" class="form-control" value="<%= @itinerary.home_airport %>">
    <!-- Input for home_airport end -->
  </div>
  <!-- Label and input for home_airport end -->

  <!-- Label and input for destination start -->
  <div class="form-group">
    <label for="destination">
      Destination
    </label>

    <!-- Input for destination start -->
    <input type="text" id="destination" name="destination" class="form-control" value="<%= @itinerary.destination %>">
    <!-- Input for destination end -->
  </div>
  <!-- Label and input for destination end -->

  <!-- Label and input for trip_id start -->
  <div class="form-group">
    <label for="trip_id">
      Trip
    </label>

    <!-- Input for trip_id start -->
    <input type="text" id="trip_id" name="trip_id" class="form-control" value="<%= @itinerary.trip_id %>">
    <!-- Input for trip_id end -->
  </div>
  <!-- Label and input for trip_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create itinerary
  </button>
</form>

<hr>

<a href="/itineraries">
  Go back
</a>

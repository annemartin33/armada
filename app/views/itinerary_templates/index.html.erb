<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All itineraries
    </h1>

    <a href="/itineraries/new" class="btn btn-block btn-outline-secondary">
      Add a new itinerary
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "itinerary_templates/itineraries_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Traveler
        </th>

        <th>
          Arrival flight
        </th>

        <th>
          Departure flight
        </th>

        <th>
          Home airport
        </th>

        <th>
          Destination
        </th>

        <th>
          Trip
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @itineraries.each do |itinerary| %>
      <tr>
        <td>
          <%= itinerary.id %>
        </td>

        <td>
          <% if itinerary.traveler.present? %>
            <a href="/travelers/<%= itinerary.traveler.id %>">
              <%= itinerary.traveler.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= itinerary.arrival_flight %>
        </td>

        <td>
          <%= itinerary.departure_flight %>
        </td>

        <td>
          <%= itinerary.home_airport %>
        </td>

        <td>
          <%= itinerary.destination %>
        </td>

        <td>
          <% if itinerary.trip.present? %>
            <a href="/trips/<%= itinerary.trip.id %>">
              <%= itinerary.trip.destination %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(itinerary.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(itinerary.updated_at) %> ago
        </td>

        <td>
          <a href="/itineraries/<%= itinerary.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @itineraries, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
